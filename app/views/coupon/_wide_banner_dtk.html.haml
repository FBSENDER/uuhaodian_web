.wide-banner.swiper-container.swiper-container-horizontal
  .swiper-wrapper
    .swiper-slide
      - items[0,6].each_with_index do |item, index|
        .item{style: "#{'margin-left:90px' if index == 0}"}
          %a{href: "/dtk/#{item["id"]}/#coupon", title: "#{item["dtitle"]}"}
            %img{src: "#{item["mainPic"]}", alt: "#{item["dtitle"]}图片"}
          %p.title
            %a{href: "/dtk/#{item["id"]}/#coupon"} #{item["dtitle"]}
          %p.price 
            %a{href: "/tshop_#{item["sellerId"]}.html"} #{item["shopName"]}
    .swiper-slide
      - if items.size > 6
        - items[6,6].each_with_index do |item, index|
          .item{style: "#{'margin-left:90px' if index == 0}"}
            %a{href: "/dtk/#{item["id"]}/#coupon", title: "#{item["dtitle"]}"}
