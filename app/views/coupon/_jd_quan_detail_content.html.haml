- coupon = @detail
- buy_url = @detail["couponurl"] == '' ? "/jd/buy/#{@detail["goods_id"]}/" : "/jd/buy/#{@detail["goods_id"]}/?coupon=#{URI.encode_www_form_component(@detail["couponurl"])}"

#coupon.zk-content
  .img-area
    %a{href: "#{buy_url}", title: "#{coupon['goods_short_name']}", target: "_blank", onclick: "ga_event(this);", data:{ga: "#{coupon["discount"].to_i == 0 ? '直接购买:详情页:详情页_直接购买_图片' : '领券:详情页:详情页_领券_图片'}"}}
      %img#cover_image{src: "#{coupon['picurl']}", alt: "#{coupon['goods_short_name']}"}
  .info-area
    .title
      %h1
        #{coupon['goods_short_name']}
    %p.recommend
      - if coupon["goods_desc"] != '' && coupon["goods_desc"] != coupon["goods_name"]
        #{coupon["goods_desc"]}
      - else
        微信扫一扫右侧二维码，关注公众号"UU好店"，领券更方便！现已支持淘宝天猫、京东、拼多多优惠券领取，还有不定期红包！
    %input{id: "endTime", value: "#{coupon['end_time']}", type: "hidden"}
    .small-img-area
      - coupon["auctionImages"][0,5].each_with_index do |img_url, index|
        %img.small_img{src: "#{img_url}", style:"#{'margin-left:0' if index == 0}"}
    .banner
      %img{src: "/img/lbanner1.png"}
      %p{style: "text-align:center;color:#ff2b22;line-height:25px;"} 关注"UU好店"公众号
      %p{style: "text-align:center;color:#ff2b22;line-height:25px;"} 查券-淘宝/京东/拼多多
    .platform
      %span 京东#{coupon["owner"] == 'g' ? '自营' : ''} - #{coupon["shopname"]}
      - if coupon["sales"] != 0 
        %span - 已有
        %span{style: "color:#FF2B22"} #{coupon["sales"]}
        %span 人购买 
    .stat
      %p.price-area
        %span.price
          - if coupon["price_pg"] != 0 && coupon["discount"] > 0
            %span.oprice 拼购价￥#{coupon["price_pg"]}&nbsp;&nbsp;
          - else
            %span.oprice 原价￥#{coupon["price"]}&nbsp;&nbsp;
          ￥
          %em.int{style: "padding:0"}> #{coupon['price_after'].to_i}
          - if coupon["price_after"].to_s.include?('.')
            %em.decimal> .#{coupon['price_after'].to_s.sub(/\d+\./,'')}
          - else
            %em.decimal> .00
          - if coupon["discount"] > 0
            %i 券后价
          - elsif coupon["discount"] == 0 && coupon["price_pg"] > 0
            %i 拼购价
          - else
            %i 现价
      .buy-area
        - if coupon["discount"].to_i > 0
          %p#eventTimeStr.desc 有效期
        - else
          %p.desc 扫描上方二维码，天天享优惠！
        %a{href: "#{buy_url}", target: "_blank", class: "buy-btn", onclick: "ga_event(this);", data:{ga: "#{coupon["discount"].to_i == 0 ? '直接购买:详情页:详情页_直接购买_按钮' : '领券:详情页:详情页_领券_按钮'}"}}
          .line.line-l
            %i
            %i
            %i
            %i
            %i
            %i
            %i
          .line.line-r
            %i
            %i
            %i
            %i
            %i
            %i
            %i
          - if coupon['discount'].to_i == 0
            立即购买
          - else
            领券立减
            %em #{coupon['discount'].to_i}
            元

:javascript
  $(".small_img").hover(function(){
    $("#cover_image").attr("src", $(this).attr("src"));  
  })
  var timeArea = $('#eventTimeStr');
  var endTime = $('#endTime').val()*1;
  setInterval(dateCountDown,1000);
  function dateCountDown(){
    var now = Math.floor(new Date().getTime()/1000)*1;
    if(now > endTime){
      timeArea.html('折扣商品限量抢购中！');
    }else{
      var gap = endTime - now;
      var dd = Math.floor(gap/(60*60*24));
      var hh = Math.floor((gap-dd*60*60*24)/(60*60));
      var mm = Math.floor((gap-dd*60*60*24-hh*60*60)/60);
      var ss = gap-dd*60*60*24-hh*60*60-mm*60;
      var timeStr = '优惠券即将失效:&nbsp;'
        +(dd>0?'<em>'+dd+'</em>天':'')
        +(hh>0?'<em>'+hh+'</em>时':'')
        +(mm>0?'<em>'+mm+'</em>分':'')
        +(ss>=0?'<em>'+ss+'</em>秒':'');
      timeArea.html(timeStr);
    }
  }
