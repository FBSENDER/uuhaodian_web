- title("#{@detail["title"]}_优优好店")
- keywords("#{@detail["title"]},#{@detail["title"]}")
- head_desc("优优好店 - 商品详情 - #{@detail["title"]}")
- path("/jd/#{@detail["item_id"]}/")
- mobile_url("http://www.uuhaodian.com/jd/#{@detail["item_id"]}/")

= render partial: "header_common"
.wrapper1200{style: "overflow:visible;z-index:98;"}
  = render partial: "jd_quan_detail_content"
%aside.wrapper1200
  .rel-zk-area{style: "z-index:1;"}
    %p.head
      %span #{@detail["shop_title"]} - 同店商品推荐
  .zk-list.clearfix#jdtongdian{style: "min-height:0;"}
  = render partial: "jd_tongdian", locals: {seller_id: @detail["shop_id"], cid3: @detail["cid3"]}
  .rel-zk-area
    %p.head
      %span 更多推荐
  .zk-list.clearfix#couponList
  = render partial: "lanlan_load_more", locals: {path: @path, pagesize: 20, sort_type: 7, pinyin: '', keyword: @detail["cname3"], cid: 0,sort: 7, type: 0}

= render partial: "footer"
= render partial: "sider_fixed_area"
