- title("#{@collection_name}_优优好店")
- keywords("#{@collection_name}")
- head_desc("优优好店 - #{@collection_name}")
- path("/collection/#{@collection_type}/")
- mobile_url("https://www.uuhaodian.com/collection/#{@collection_type}/")

= render partial: "header_common"
.wrapper1200{style: "margin-top: 10px;"}
  .item-list-top
    - if @collection_type == 4
      %span.left 9块9包邮 - 精选特价好物 按品类筛选更精准
      %a{href: "/collection/4/"}
        %span.right 全部分类
    - elsif @collection_type == 2
      %span.left 优优好店畅销榜 - 大家最爱买 
      %a{href: "/collection/2/"}
        %span.right 全部分类
    - elsif @collection_type == 1
      %span.left 聚特卖 - 精选聚划算、淘宝特卖优惠券 
      %a{href: "/collection/1/"}
        %span.right 全部分类
= render partial: "header_lanlan_fenlei_collection"
.wrapper1200{style: "margin-top: 10px;"}
  .zk-list.clearfix#couponList
  = render partial: "lanlan_load_more", locals: {path: @path, pagesize: 20, sort_type: 7, pinyin: '', keyword: '', cid: @cid,sort: 7, type: @collection_type}

= render partial: "footer"
= render partial: "sider_fixed_area"
