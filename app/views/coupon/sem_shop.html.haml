- title("【#{@shop['title']}】#{@shop['title']}优惠券/首页/评价/怎么样_优优好店")
- head_desc("#{@shop['title']} - 优优好店推荐")
- keywords("#{@shop['title']},#{@shop['title']}首页,#{@shop['title']}优惠券,#{@shop['title']}折扣,#{@shop['title']}怎么样,#{@shop['title']}评价,#{@shop['title']}淘宝,#{@shop['title']}天猫")

.dazhe
  .header_pr.header_red.transition
    .icon_header
      .search
        %i
        %a{href: "/dz_search/?source=sshop", onclick: "_hmt.push(['_trackEvent', '顶部点击', 'click', 'dian'])"}
          %p 输入您需要的商品名称
  %a{href: "#{@shop['shop_url']}", target: "_blank", isconvert: 1, onclick: "_hmt.push(['_trackEvent', '店铺点击', 'click', 'dian'])", data: {pid: "mm_130328389_44598299_97435850386"}}
    .shop
      .jbtn
        %img{src: "http://www.uuhaodian.com/img/jindian.png", height: "35px;", width: "90px;"}
      .avatar
        %img{src: "#{@shop['pic_url']}"}
      .info
        %p.title #{@shop['title']}
        %p.desc #{@shop['place']}
        %p.desc 主营：#{@shop['type']}
        %p.desc 评价：优
  .content
    .shop-header #{@shop['title']} - 热销商品
    #dazheList
  .footer
    %a.home.zh{href: "http://m.uuhaodian.com/index.php?r=index/wap&source=sshop", target: "_blank", onclick:"_hmt.push(['_trackEvent', '首页', 'click', 'sshop'])"}
      %img.icon{src: "http://www.uuhaodian.com/favicon.ico"}
      .text 优优好店首页
    - if @device == "ios"
      %a#more_btn.btn.zh{href: "http://apphtml.ffquan.com/index.php?r=index/ios-down&app_id=550416", target: "_blank", onclick:"_hmt.push(['_trackEvent', '下载app-ios', 'click', 'sshop'])"} 下载APP获取更多优惠
    - else
      %a#more_btn.btn.zh{href: "https://a.app.qq.com/o/simple.jsp?pkgname=com.dataoke.shoppingguide.app550416", target: "_blank", onclick:"_hmt.push(['_trackEvent', '下载app-android', 'click', 'sshop'])"} 下载APP获取更多优惠

.scroll_top.close
  %a{href: "javascript:;"}
    %img{src: "/img/to_top.png"}

:javascript
  $(".zh").click(function(){window._agl && window._agl.push(['track', ['success', {t: 3}]])})

= render partial: "sem_shop_js"
