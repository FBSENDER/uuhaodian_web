- title("#{@detail["shortTitle"]}_优优好店")
- keywords("#{@detail["shortTitle"]},#{@detail["title"]}")
- head_desc("#{@detail["shortTitle"]} - 优优好店推荐：#{@detail["desc"]} 优优好店，找券领券更方便！")
- path("/dtk/#{@id}/")
- mobile_url("http://wap.uuhaodian.com/dtk/#{@id}/")
- mp = "http://wap.uuhaodian.com/dtk/#{@id}/"

%header.header#header
  = render partial: "header_top"
  = render partial: "header_tab"

.wrapper1200
  = render partial: "dtk_product_detail_content"
%aside.wrapper1200
  - if @items.size > 0
    .item-list-top{style: "margin-top: 10px;padding-left:0;"}
      %span.left{style: "padding-left:15px;"} 相关推荐
      = render partial: "wide_banner_dtk", locals: {items: @items}
.wrapper1200
  .rel-zk-area
    %p.head
      %span 更多推荐
  .zk-list.clearfix#couponList
  = render partial: "dg_load_more", locals: {keyword: @detail["title"][-6,6], has_coupon: 0}

= render partial: "footer", locals: {mobile_path: mp}
= render partial: "sider_fixed_area"
