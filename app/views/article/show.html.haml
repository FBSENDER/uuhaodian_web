- title("#{@title} - 优优好店")
- keywords(@keywords)
- head_desc(@description)

%header.header#header
  = render partial: "/coupon/header_bar"
  = render partial: "/coupon/header_top"
  = render partial: "/coupon/header_tab"

= render partial: "/coupon/jd_banner_1200_1"

.wrapper1200.article-container
  %div{style: "width: 900px;"}
    %article
      = @content.html_safe
  %aside
    %h3 更多文章
    - @articles.each do |a|
      %a{href: "/article/#{a["id"]}.html"}
        %p #{a["title"]}
      %hr
    = render partial: "jd_banner_250_250"
    %h3{style: "margin-top: 20px;"} 好货推荐
    - @products.each do |pr|
      %a{href: "/jdhh/#{pr["id"]}/"}
        %p #{pr["title"]}
    %h3{style: "margin-top: 20px;"} 好店推荐
    - @shops.each do |shop|
      %a{href: "/jdshop/#{shop["shop_id"]}/"}
        %p #{shop["shop_name"]}
    %h3{style: "margin-top: 20px;"} 京东精选
    - @cores.each do |core|
      %a{href: "/core_2_#{core["id"]}/"}
        %p 京东#{core["keyword"]}

= render partial: "/coupon/footer"
